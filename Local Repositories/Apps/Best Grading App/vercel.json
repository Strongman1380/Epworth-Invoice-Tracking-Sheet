{
  "version": 2,
  "buildCommand": false,
  "devCommand": "npm run dev",
  "outputDirectory": ".",
  "cleanUrls": true,
  "trailingSlash": false,
  "github": {
    "enabled": true,
    "silent": false,
    "autoAlias": true
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Cache-Control", "value": "public, max-age=3600" }
      ]
    }
  ],
  "functions": {
    "api/*.js": {
      "memory": 256
    }
  },
  "redirects": [
    { "source": "/favicon.ico", "destination": "/Files to use/BEST_logo_small.jpg", "permanent": true }
  ]
}
